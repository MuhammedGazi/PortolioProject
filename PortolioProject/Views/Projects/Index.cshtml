@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container mt-4">
    <h1>Portfolyo Projeleri</h1>
    <hr />
    <p>
        <a asp-action="CreateProject" class="btn btn-primary">Yeni Proje Ekle</a>
    </p>

    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Başlık</th>
                <th>Alt Başlık</th>
                <th>Proje Linki</th>
                <th style="width: 150px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PortfolioId</td>
                    <td>@item.Title</td>
                    <td>@item.SubTitle</td>
                    <td>
                        <a href="@item.Url" target="_blank">Linke Git</a>
                    </td>
                    <td>
                        <a asp-action="EditProject" asp-route-id="@item.PortfolioId" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="DeleteProject" asp-route-id="@item.PortfolioId" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
