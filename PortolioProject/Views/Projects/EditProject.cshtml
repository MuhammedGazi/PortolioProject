@model Portfolio
@{
    ViewData["Title"] = "EditProject";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container mt-4">
    <h1>Projeyi Düzenle</h1>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="EditProject" method="post">
                <input type="hidden" asp-for="PortfolioId" />

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label">Proje Başlığı</label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SubTitle" class="control-label">Alt Başlık (Kategori)</label>
                    <input asp-for="SubTitle" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="control-label">Görsel URL'i</label>
                    <input asp-for="ImageUrl" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Url" class="control-label">Proje URL'i (GitHub vb.)</label>
                    <input asp-for="Url" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

