@model List<PortolioProject.DAL.Entities.Portfolio>
<section id="works" class="s-works target-section">

    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full">
            <h3>Portfolyo</h3>
            <h1>Son Projelerime Göz Atabilirsiniz</h1>

            <p class="lead">Öğrendiklerimi Yaparak Pekiştiriyorum </p>
        </div>
    </div>

    <div class="row masonry-wrap">
        <div class="masonry">
            @foreach(var item in Model)
            {
            <div class="masonry__brick">
                <div class="item-folio">

                    <div class="item-folio__thumb">
                        <a href="@item.ImageUrl" class="thumb-link" title="@item.Title" data-size="1050x700">
                            <img src="@item.ImageUrl"
                                     srcset="@item.ImageUrl 1x, @item.ImageUrl 2x" alt="@item.Title">
                            <span class="shadow-overlay"></span>
                        </a>
                    </div>

                    <div class="item-folio__text">
                        <h3 class="item-folio__title">
                            @item.Title
                        </h3>
                        <p class="item-folio__cat">
                           @item.SubTitle
                        </p>
                    </div>

                        <a href="@item.Url"
                           class="item-folio__project-link"
                           title="Proje Linki"
                           target="_blank" rel="noopener noreferrer"
                           onclick="window.open(this.href); return false;">
                            @* En önemli kısım bu satır *@
                            <i class="im im-link"></i>
                        </a>

                    <div class="item-folio__caption">
                        <p>@item.Description</p>
                    </div>

                </div> <!-- end item-folio -->
            </div> <!-- end masonry__brick -->
            }


        </div>
    </div> <!-- end masonry -->

</section> 