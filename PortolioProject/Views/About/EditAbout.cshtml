@model About
@{
    ViewData["Title"] = "EditAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Hakkında Kaydını Düzenle</h2>
        </div>
        <div class="card-body">
            <form asp-action="EditAbout" method="post">
                <input type="hidden" asp-for="AboutId" />

                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SubDescription" class="form-label">Alt Açıklama</label>
                    <input asp-for="SubDescription" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Details" class="form-label">Detaylar</label>
                    <textarea asp-for="Details" class="form-control" rows="5"></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>

            </form>
        </div>
    </div>
</div>


