@model About
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Yeni Hakkında Kaydı Oluştur</h2>
        </div>
        <div class="card-body">
            <form asp-action="CreateAbout" method="post">

                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label">Başlık</label>
                    <input asp-for="Title" class="form-control" placeholder="Başlık giriniz..." />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SubDescription" class="form-label">Alt Açıklama</label>
                    <input asp-for="SubDescription" class="form-control" placeholder="Kısa bir alt açıklama giriniz..." />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Details" class="form-label">Detaylar</label>
                    <textarea asp-for="Details" class="form-control" rows="5" placeholder="Detaylı açıklamayı buraya yazınız..."></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
                </div>

            </form>
        </div>
    </div>
</div>

